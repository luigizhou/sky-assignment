[Unit]
Description=Cassandra
After=network.target

[Service]
Type=forking
PIDFile=/var/lib/cassandra/cassandra.pid
User=cassandra
Group=cassandra
ExecStart=/opt/apache-cassandra-3.9/bin/cassandra -p /var/lib/cassandra/cassandra.pid
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target